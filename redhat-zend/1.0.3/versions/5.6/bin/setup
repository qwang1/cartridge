#!/bin/bash -eux

version="$1"

source $OPENSHIFT_CARTRIDGE_SDK_BASH

id -u $OPENSHIFT_GEAR_UUID > ${OPENSHIFT_ZEND_DIR}env/OPENSHIFT_ZEND_UID
ZCE_PREFIX="${OPENSHIFT_ZEND_DIR}php-5.3"
echo "${ZCE_PREFIX}" > ${OPENSHIFT_ZEND_DIR}env/ZCE_PREFIX
echo "${ZCE_PREFIX}/bin/php" > ${OPENSHIFT_ZEND_DIR}env/PHP_PEAR_PHP_BIN
echo "${ZCE_PREFIX}/share/pear" > ${OPENSHIFT_ZEND_DIR}env/PHP_PEAR_INSTALL_DIR
