ServerRoot "<%= ENV['OPENSHIFT_METRICS_DIR'] %>"
Listen <%= "#{ENV['OPENSHIFT_METRICS_IP']}:#{ENV['OPENSHIFT_METRICS_PORT']}" %>
User <%= ENV['OPENSHIFT_GEAR_UUID'] %>
Group <%= ENV['OPENSHIFT_GEAR_UUID'] %>
ErrorLog "<%= "|/usr/sbin/rotatelogs #{ENV['OPENSHIFT_METRICS_DIR']}/logs/error_log-%Y%m%d-%H%M%S-%Z 86400" %>"
CustomLog "<%= "|/usr/sbin/rotatelogs #{ENV['OPENSHIFT_METRICS_DIR']}/logs/access_log-%Y%m%d-%H%M%S-%Z 86400" %>" combined

php_value include_path "."

